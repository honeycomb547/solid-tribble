{
  "manifest_version": 3,
  "name": "Hentai Sauce Display",
  "version": "1.0",
  "author": "honeycomb547",
  "description": "This extension simply outputs the current number on various hentai sites.",
  "permissions": ["activeTab", "nativeMessaging", "scripting"],
  "action": {
    "default_icon": "logo.png",
    "default_title": "Hentai Sauce Display"
  },
  "background": {
    "service_worker": "src/background/index.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.nhentai.net/*",
        "https://*.exhentai.org/*"
      ],
      "js": [
        "src/content/index.js"
      ]
    }
  ]
}
