{
  "manifest_version": 3,
  "name": "Hentai Number Grabber",
  "version": "1.0",
  "author": "honeycomb547",
  "description": "This extension simply outputs the current number on various hentai sites.",
  "permissions": ["activeTab", "nativeMessaging"],
  "content_scripts": [
    {
      "matches": [
        "https://*.nhentai.net/*",
        "https://*.exhentai.org/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": "logo.png",
    "default_title": "Hentai number grabber"
  }
}
